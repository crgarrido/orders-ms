generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  PAID
  DELIVERED
  CANCELLED
}

model Order {
  id          String   @id @default(uuid())
  totalAmount Float    @default(0.0) // Valor predeterminado agregado
  totalItems  Int      @default(0)   // Valor predeterminado agregado

  status         OrderStatus @default(PENDING)
  paid           Boolean     @default(false)
  paidAt         DateTime?
  stripeChargeId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  OrderItem    OrderItem[]
  OrderReceipt OrderReceipt?
}


model OrderItem {
  id        String @id @default(uuid())
  productId Int
  quantity  Int      @default(1) // Valor predeterminado agregado
  price     Float    @default(0.0) // Valor predeterminado agregado

  // Relación corregida: La relación y el campo escalar `orderId` son opcionales
  Order   Order?  @relation(fields: [orderId], references: [id])
  orderId String?
}
model OrderReceipt {
  id String @id @default(uuid())

  order   Order  @relation(fields: [orderId], references: [id])
  orderId String @unique

  receiptUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}